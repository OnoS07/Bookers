<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<h1>Books</h1>
<main>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
		<% @books.each do |book| %>
		 <tr>
		 	<td><%= book.title %></td>
		 	<td><%= book.body %></td>
		 	<td><%= link_to "Show", book_path(book) %></td>
		 	<td><%= link_to "Edit", edit_book_path(book) %></td>
		 	<td><%= link_to "Destroy", book_path(book),method: :delete ,
		 					"data_confirm" =>"Are you Sure?" %></td>
		 </tr>
		<% end %>
	</table>
</main>

<h1>New Book</h1>
<%= form_for(@book)do |f| %>

 <% if @book.errors.any? %>
  <h2>errors prohibited this book from being saved</h2>
  <ul>
	<% @book.errors.full_messages.each do |message| %>
  	 <li><%= message %></li>
	<% end %>
  </ul>
 <% end %>

	<p>Title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %><br>
	<%= f.submit "Create Book" %>
<% end%>

